  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Develop Backend",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--experimental-loader ts-node/esm --experimental-specifier-resolution=node",
        "IS_RUNNING_LOCALLY": "true"
      },
      "program": "${workspaceFolder}/backend/Server.ts",
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}

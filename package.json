{
  "name": "flax-crm",
  "version": "1.0.0",
  "description": "Flax CRM",
  "type": "module",
  "scripts": {
    "develop": "concurrently \"pnpm:develop:*\"",
    "dev:vscode": "concurrently \"pnpm:develop:db\" \"pnpm:develop:frontend\" \"pnpm:develop:backend:types\"",
    "develop:backend": "cross-env \"NODE_OPTIONS=--experimental-loader ts-node/esm  --experimental-specifier-resolution=node\" IS_RUNNING_LOCALLY=true nodemon --signal SIGINT backend/Server.ts --watch backend --watch migrations --watch frontend --ext tsx,ts,js",
    "develop:backend:types": "tsc --noEmit --watch --preserveWatchOutput",
    "develop:db": "docker-compose up",
    "develop:frontend": "webpack serve --config webpack.config.cjs --port 7700",
    "check-format": "prettier --check .",
    "clean": "rimraf dist lib",
    "build": "pnpm run clean && concurrently pnpm:build:*",
    "build:backend": "tsc",
    "build:frontend": "webpack build --mode=production --env prod",
    "start": "node --experimental-specifier-resolution=node backend/Server.js",
    "format": "prettier --write .",
    "lint": "eslint \"backend/**/*\" \"frontend/**/*\"",
    "test": "concurrently \"pnpm:test:*\"",
    "test:frontend": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.browser.config.js --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustUtahCoders/flax-crm.git"
  },
  "engines": {
    "node": "16.4.2"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 2 Safari versions",
    "last 3 Edge versions",
    "last 10 Firefox versions"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JustUtahCoders/flax-crm/issues"
  },
  "homepage": "https://github.com/JustUtahCoders/flax-crm#readme",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.14.2",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@jest/types": "^27.1.1",

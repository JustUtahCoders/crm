{
  "files": ["backend/Server.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "lib",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018"
    ],
    "target": "ES2020"
  },
  "ts-node": {
    "transpileOnly": true
  }
}
